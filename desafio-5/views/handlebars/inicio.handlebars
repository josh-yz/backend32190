<h1 style="color:blue;">Ingrese datos handlebars</h1>
<br>

<form action="/hbs/productos" method="post">

    <div class="form-group">
        <label for="title"><b>Nombre</b></label>
        <input id="title" class="form-control" type="text" name="title">
    </div>
    <div class="form-group">
        <label for="price"><b>precio</b></label>
        <input id="price" class="form-control" type="number" name="price">
    </div>
    <div class="form-group">
        <label for="thumbnail"><b>foto</b></label>
        <input id="thumbnail" class="form-control" type="text" name="thumbnail">
    </div>

    <button class="btn btn-success mt-3 mb-5">Enviar</button>
</form>

<h2 style="color:crimson;">Historial</h2>

{{#if productos}}
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        {{#each productos}}
        <tr>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td>{{thumbnail}}</td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}
<h3 class="alert alert-danger">no se encontraron datos</h3>
{{/if}}