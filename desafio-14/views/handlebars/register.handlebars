<div class="container mt-3">
   <div class="jumbotron">

      <h1>REGISTER</h1>
      <br>
      <form class="form" action="api/register" method="post" role="form" autocomplete="off">

        <div class="form-group">
          <input id="email" name='email' placeholder="nombre" class="form-control" type="text" required>
        </div>

        <div class="form-group">
          <input id="password" name='password' placeholder="password" class="form-control" type="password" required>
        </div>

        <div class="form-group">
          <input class="btn btn-success my-3" type="submit" value="Register">
        </div>
      </form>

      <hr>

      <div class="text-left">
        <button class="btn btn-success my-3" onclick="location.href = '/login'">Ir a Login</button>
      </div>

</div>

<script src="./login.js"></script>