        <h1 id="usuario"  style="color: green">Login usuario</h1>
        <button id="btnLogin" class="btn btn-success mt-3 mb-5">Desloguear</button>
    </div>
</div>


<h1 style="color:blue;">Ingrese datos handlebars</h1>
<br>


<h2 style="color:crimson;">Historial</h2>


<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        <tbody id="data"></tbody>
    </table>
</div>
<div class="history-container container">
    <h4 id="compression">
        Centro de mensajes
    </h4>
    <form class="form-inline" onsubmit="return addMessage(event)" autocomplete="off">
        <input type="email" required="true" id="email" class="form-control my-2 mr-2" placeholder="Email">
        <input type="text" required="true" id="nombre" class="form-control my-2 mr-2" placeholder="Nombre">
        <input type="text" required="true" id="apellido" class="form-control my-2 mr-2" placeholder="Apellido">
        <input type="text" id="alias" name="alias" class="form-control my-2 mr-2"  placeholder="alias">
        <input type="number" id="edad" name="edad" class="form-control my-2 mr-2"  placeholder="edad">
        <input type="text" id="avatar" name="avatar" class="form-control my-2 mr-2"  placeholder="avatar | logo"> <br />
        <input type="text" required="true" id="text" class="form-control my-2 mr-2" placeholder="Deja tu mensaje..">
        <input class="btn btn-primary my-2" type="submit" value="Enviar">
    </form>
    <div class="messages-container" id="messages"></div>
</div>


